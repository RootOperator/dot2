# zls already has some good snippets

snippet dba "Debug Allocator"
    var dba: std.heap.DebugAllocator(.{}) = .init;
    defer _ = dba.deinit();
    const allocator = dba.allocator();
    ${0}

snippet cimport "C Import"
    const ${1} = @cImport({
        @cInclude("${2}");
    });

snippet pstruct "Public struct"
    pub const ${1} = struct {
        ${0}
    };

snippet structt "@This struct"
    const ${1} = struct {
        const Self = @This();
        ${0}
    };

snippet This
    const Self = @This();
    ${0}

snippet self
    self: *const ${1:Self}

snippet selff
    self: ${1:Self}

snippet self*
    self: *${1:Self}

snippet arena
    var arena = std.heap.ArenaAllocator.init(${1:std.heap.page_allocator});
    defer arena.deinit();
    const allocator = arena.allocator();
    ${0}

snippet fba
    var buffer: [${1:1024}]u8 = undefined;
    var fba = std.heap.FixedBufferAllocator.init(&buffer);
    const allocator = fba.allocator();
    ${0}

snippet page
    const allocator = std.heap.page_allocator;
    ${0}

snippet calloc
    const allocator = std.heap.c_allocator;
    ${0}

snippet stdt
    var stdout_buffer: [1024]u8 = undefined;
    var stdout_writer = std.fs.File.stdout().writer(&stdout_buffer);
    const stdout = &stdout_writer.interface;
    ${0}
