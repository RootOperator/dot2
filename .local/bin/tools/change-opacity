#!/bin/bash

TRANSPARENCY=$(hyprctl getprop active opacity)
OPAQUE=$(hyprctl getprop active opaque)

if [[ "$OPAQUE" == "true" ]] || [[ "$TRANSPARENCY" != "1" ]]; then
    hyprctl dispatch setprop active opaque false
    hyprctl dispatch setprop active opacity 1
    exit
fi

if [[ "$1" == "full" ]]; then
    hyprctl dispatch setprop active opaque true
fi

if [[ "$TRANSPARENCY" == "1" ]]; then
    hyprctl dispatch setprop active opacity 1.2
fi
