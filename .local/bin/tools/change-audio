#!/bin/bash

SPEAKER="alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__Speaker__sink"
HEADPHONES="alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__Headphones__sink"
HDMI1="alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__HDMI1__sink"
HDMI2="alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__HDMI2__sink"
HDMI3="alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__HDMI3__sink"

if [ -z "$1" ]
then
    exit
fi

DEVICE=$1

case $1 in
    "headphones")
        DEVICE=$HEADPHONES
        ;;
    "speaker")
        DEVICE=$SPEAKER
        ;;
    "hdmi1")
        DEVICE=$HDMI1
        ;;
    "hdmi2")
        DEVICE=$HDMI2
        ;;
    "hdmi3")
        DEVICE=$HDMI3
        ;;
esac

pactl set-default-sink $DEVICE
